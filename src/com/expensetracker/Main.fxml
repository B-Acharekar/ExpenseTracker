<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.expensetracker.MainController" stylesheets="@styles.css">
  <top>
    <HBox alignment="CENTER" spacing="10">
      <Label text="Expense Tracker" styleClass="title-label" />
    </HBox>
  </top>

  <center>
    <VBox spacing="10" alignment="CENTER">
      <HBox spacing="10" alignment="CENTER">
        <Label text="Expense Name:" />
        <TextField fx:id="expenseNameField" promptText="Enter name" />
      </HBox>
      <HBox spacing="10" alignment="CENTER">
        <Label text="Amount:" />
        <TextField fx:id="expenseAmountField" promptText="Enter amount" />
      </HBox>
      <HBox spacing="10" alignment="CENTER">
        <Label text="Category:" />
        <ComboBox fx:id="categoryComboBox" prefWidth="200" />
      </HBox>
      <Button text="Add Expense" fx:id="addExpenseButton" onAction="#addExpense" styleClass="add-button" />
    </VBox>
  </center>

  <right>
    <VBox spacing="10" alignment="CENTER">
      <Label text="Expenses" styleClass="expenses-label" />
      <ListView fx:id="expenseListView" />
    </VBox>
  </right>

  <bottom>
    <HBox alignment="CENTER" spacing="10" styleClass="bottom-bar">
      <Label text="Total Expenses: " />
      <Label fx:id="totalAmountLabel" text="0.00" />
    </HBox>
  </bottom>
</BorderPane>